{
    "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "noEmitOnError": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "sourceMap": true,
      "strictNullChecks": true,
      "strictPropertyInitialization": false,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "noUnusedParameters": true
    },
    "include": [
      "src"
    ],
    "exclude": [
      "node_modules"
    ]
}
