{
  "name": "messenger-project",
  "version": "1.0.0",
  "description": "study project",
  "scripts": {
    "test": "mocha -r mocha-env.js --timeout 10000",
    "build": "webpack --mode=production --node-env=production",
    "start": "npm run build && node server.js",
    "lint": "eslint . --ext .ts",
    "slint": "stylelint **/*.scss",
    "build:dev": "webpack --mode=development",
    "build:prod": "webpack --mode=production --node-env=production",
    "watch": "webpack --watch",
    "serve": "webpack serve"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm-run-all test lint:all"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --no-error-on-unmatched-pattern"
    ],
    "*.scss": [
      "stylelint --allow-empty-input"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OlgaNoz/messenger-project.git"
  },
  "author": "Olga Nozdrya",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/OlgaNoz/messenger-project/issues"
  },
  "homepage": "https://github.com/OlgaNoz/messenger-project#readme",
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/jsdom": "^21.1.1",
    "@types/mocha": "^10.0.1",
    "@types/sinon": "^10.0.15",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "@webpack-cli/generators": "^3.0.6",
    "chai": "^4.3.7",
    "eslint": "^8.38.0",
    "express": "^4.18.2",
    "husky": "^8.0.3",
    "jsdom": "22.1.0",
    "lint-staged": "^13.2.2",
    "mocha": "^10.2.0",
    "sass": "^1.63.2",
    "stylelint": "^15.6.0",
    "stylelint-config-standard": "^33.0.0",
    "stylelint-scss": "^4.6.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3",
    "webpack": "^5.85.1",
    "webpack-cli": "^5.1.3",
    "webpack-dev-server": "^4.15.0"
  },
  "dependencies": {
    "css-loader": "^6.8.1",
    "handlebars": "^4.7.7",
    "handlebars-loader": "^1.7.3",
    "html-webpack-plugin": "^5.5.1",
    "mini-css-extract-plugin": "^2.7.6",
    "sass-loader": "^13.3.1",
    "sinon": "^15.1.0",
    "ts-loader": "^9.4.3",
    "uuid": "^9.0.0"
  }
}
